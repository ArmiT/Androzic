<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="ApplicationTheme" parent="@style/Theme.AppCompat">
        <item name="horizontalPadding">6dip</item>
        <item name="activatedBackgroundIndicator">@null</item>
    </style>

    <style name="ApplicationTheme.NoActionBar" parent="@style/Theme.AppCompat">
        <item name="android:windowNoTitle">true</item>
    </style>

    <!-- Left to remember how to use target API check -->
    <style name="MyActionBar" parent="@style/Widget.AppCompat.ActionBar">
        <item name="android:displayOptions" tools:targetApi="11">showHome|useLogo</item>
        <!-- Support library compatibility -->
        <item name="displayOptions">showHome|useLogo</item>
    </style>

    <style name="Dialog" parent="@android:style/Theme.Dialog">
        <item name="horizontalPadding">6dip</item>
    </style>

    <style name="Scroller">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/slider_back</item>
        <item name="android:layout_margin">3dp</item>
    </style>

    <style name="sectionHeader">
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginBottom">8dp</item>
		<item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
    </style>

</resources>