<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.Application" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/theme_primary_color</item>
        <item name="colorPrimaryDark">@color/theme_primary_darker_color</item>
        <item name="colorAccent">@color/theme_accent_color</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:windowBackground">@color/theme_primary_darker_color</item>
        <item name="android:colorBackground">@color/theme_primary_darker_color</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="activatedBackgroundIndicator">@null</item>
        <!-- The rest of your attributes -->
        <item name="horizontalPadding">6dip</item>
    </style>

    <style name="ThemeOverlay.ActionBar" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:background">@color/theme_primary_color</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>

    <style name="ApplicationTheme.NoActionBar" parent="Theme.AppCompat">
        <item name="android:windowNoTitle">true</item>
    </style>

    <!-- Left to remember how to use target API check -->
    <style name="MyActionBar" parent="@style/Widget.AppCompat.ActionBar">
        <item name="android:displayOptions" tools:targetApi="11">showHome|useLogo</item>
        <!-- Support library compatibility -->
        <item name="displayOptions">showHome|useLogo</item>
    </style>

    <style name="Dialog" parent="@android:style/Theme.Dialog">
        <item name="horizontalPadding">6dip</item>
    </style>

    <style name="Scroller">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/slider_back</item>
        <item name="android:layout_margin">3dp</item>
    </style>

</resources>